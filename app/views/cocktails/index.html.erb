

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url( <%= image_path('bannerimage.jpg')%>);">
  <div class="container">
    <h1>Delicious cocktails for all!</h1>
    <%= link_to "Create Cocktail", new_cocktail_path, class: "btn btn-flat" %>
  </div>
</div>


<h1 class="center-text">Cocktails Index</h1>

<%= simple_form_for :search, url: cocktails_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>

<div class="card-container">
  <% @cocktails.each do |cocktail| %>
  <%= link_to cocktail_path(cocktail), :action => 'go' do  %>
    <div class="card-cocktail">
      <% if cocktail.photo.attached? %>
        <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill, class:"card-cocktail-image" %>
      <% else %>
        <img src="https://res.cloudinary.com/dhis451zc/image/upload/v1598005706/sample.jpg" alt="">
        <% end %>
      <div class="card-cocktail-infos">
        <div>
          <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
        </div>
      </div>
    </div>
  <% end %>
  <% end %>
</div>


